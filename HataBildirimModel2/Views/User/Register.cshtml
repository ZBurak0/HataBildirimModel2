@using HataBildirimModel.Models
@model User

@{
    ViewData["Title"] = "Kayıt Ol";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label for="Username">Kullanıcı Adı</label>
        <input type="text" class="form-control" asp-for="UserName" required />
    </div>

    <div class="form-group">
        <label for="Password">Şifre</label>
        <input type="password" class="form-control" asp-for="Password" required />
    </div>

    <div class="form-group">
        <label for="Name">Ad</label>
        <input type="text" class="form-control" asp-for="Name" required />
    </div>

    <div class="form-group">
        <label for="Surname">Soyad</label>
        <input type="text" class="form-control" asp-for="Surname" required />
    </div>

    <div class="form-group">
        <label for="UnitId">Birim</label>
        <select class="form-control" asp-for="UnitId" required>
            <option value="">Birimi Seçin</option>  <!-- Varsayılan boş seçenek -->
            @foreach (var unit in ViewBag.Units)
            {
                <option value="@unit.Id">@unit.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="PhoneNumber">Telefon Numarası</label>
        <input type="text" class="form-control" asp-for="PhoneNum" maxlength="11" required />
    </div>

    <div class="form-group">
        <label for="Email">E-posta</label>
        <input type="email" class="form-control" asp-for="Email" required />
    </div>

    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @ViewData["ErrorMessage"]
    </div>
}


